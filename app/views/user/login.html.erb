<h2>Login</h2>

<% form_for :user, url_for(:user, :login) do |f| %>

<% field_set_tag do %>
  <%= f.label :email %>
  <%= f.email_field :email %>
<% end %>

<% field_set_tag do %>
  <%= f.label :password %>
  <%= f.password_field :password %>
<% end %>


<%= submit_tag "Submit", url_for(:user, :index)%>
<% end %>